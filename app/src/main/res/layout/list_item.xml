<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="190dp"
        >

        <ImageView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/doctor"
            android:id="@+id/imagedr">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    tools:text="Meet"
                    tools:textSize="25sp"
                    tools:textStyle="italic"
                    android:id="@+id/drname">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drname"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    tools:text="Deegre"
                    tools:textSize="15sp"
                    tools:textStyle="italic"
                    android:id="@+id/drdegree">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/ic_baseline_call_24"
                    android:id="@+id/call"
                    android:focusable="false">

                </Button>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/call"
                    android:background="@drawable/ic_baseline_language_24"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/website">

                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="136dp"
                android:text="Take Appointment">

            </Button>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>